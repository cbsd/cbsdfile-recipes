jail_deluge()
{
	ip4_addr="DHCP"
	host_hostname="${jname}.my.domain"
	pkg_bootstrap=1
	ver="native"

#	pkglist="net-p2p/deluge"
	pkglist="mc python311"

	# turn off unnecessary services
	sysrc="syslogd_enable=NO cron_enable=NO sendmail_enable=NO sendmail_submit_enable=NO sendmail_outbound_enable=NO sendmail_msp_queue_enable=NO clear_tmp_enable=YES deluge_enable=YES"
}

postcreate_deluge()
{
	local _ip=

	set +o xtrace

	_ip=$( jget jname=${jname} mode=quiet ip4_addr )

	#jexec chown -R 850:850 /home/deluge
	# may dup
	jexec service deluge stop || true
	sleep 2
	jexec service deluge start || true

	# wait a liitle for process before tests
	sleep 8

	# postmessage
	set +o errexit  # retcode for iptype

	OIFS="${IFS}"
	IFS=","
	for i in ${_ip}; do
		IFS="${OIFS}"
		myip=
		iptype ${i}
		case $? in
			1)
				# ipv4, no cast
				myip="${i}"
				;;
			2)
				# ipv6, add brackets
				myip="[${i}]"
				;;
			*)
				# unknown IP type
				continue
				;;
			esac

		cat <<EOF
  ${jname} url          : http://${_ip}:8080
  Default credentials:
    user: admin
    password: adminadmin

EOF
		IFS=","
	done
	IFS="${OIFS}"
	set -o errexit
}
