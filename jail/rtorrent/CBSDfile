# Install rtorrent for CBSD forms-rtorrent
PY_VERSION="3.9"                                                                                                # use python ${PY_VERSION} by default, e.g: 3.9
PYTHON_CMD="python${PY_VERSION}"                                                                                # default python interpreter: python${PY_VERSION}, e.g: python3.9
PIP_CMD="pip-${PY_VERSION}"                                                                                     # default pip cmd: pip-${PY_VERSION}, e.g: pip-3.9
PY_PREFIX=$( echo ${PY_VERSION} | tr -d "." ) 

jail_rtorrent()
{
	ip4_addr="DHCP"
	host_hostname="${jname}.my.domain"
	pkg_bootstrap=1
	ver="native"

	pkglist="py${PY_PREFIX}-cloudscraper sox mediainfo"

	# turn off unnecessary services
	sysrc \
		syslogd_enable="NO" \
		cron_enable="NO" \
		sendmail_enable="NO" \
		sendmail_submit_enable="NO"\
		sendmail_outbound_enable="NO" \
		sendmail_msp_queue_enable="NO" \
		syslogd_enable="NO" \
		clear_tmp_enable="YES"


}

preup_rtorrent()
{
	# forms-based module, install it first
	module mode=install forms-rtorrent
}

postcreate_rtorrent()
{
	local _ip

	forms module=rtorrent inter=0

	jexec <<EOF
export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin:/root/bin

ln -s /usr/local/bin/${PYTHON_CMD} /usr/local/bin/python
ln -s /usr/local/bin/${PYTHON_CMD} /usr/local/bin/python3
EOF

	# may dup
	jexec service rtorrent stop || true
	sleep 2
	jexec service rtorrent start || true

	# wait a liitle for process before tests
	sleep 8

	_ip=$( jget jname=${jname} mode=quiet ip4_addr )

	# postmessage
	set +o errexit  # retcode for iptype

	OIFS="${IFS}"
	IFS=","
	for i in ${_ip}; do
		IFS="${OIFS}"
		myip=
		iptype ${i}
		case $? in
			1)
				# ipv4, no cast
				myip="${i}"
				;;
			2)
				# ipv6, add brackets
				myip="[${i}]"
				;;
			*)
				# unknown IP type
				continue
				;;
			esac

		cat <<EOF
  ${jname} url          : http://${_ip}
EOF
		IFS=","
	done
	IFS="${OIFS}"
	set -o errexit
}
